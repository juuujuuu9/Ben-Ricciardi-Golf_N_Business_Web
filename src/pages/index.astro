---
import Layout from '../components/Layout.astro';
import heroBannerImage from '../../public/assets/img/img-herobanner.png';
import rectangleImage from '../../public/assets/img/rectangle-1.png';
import thumbImage from '../../public/assets/img/thumb-1.jpg';
import thumb2Image from '../../public/assets/img/thumb-2.jpg';
---

<Layout title="Ben Ricciardi" description="Ben Ricciardi's personal website" currentPage="home">
	<!-- Hero Section -->
	<section class="w-full py-20">
		<div class="w-full max-w-[1440px] mx-auto">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
				<!-- Left Column - Text Content -->
				<div class="space-y-8">
					<!-- Tagline -->
					<div class="flex items-center gap-4">
						<div class="w-12 h-0.5 bg-[var(--primary-red)]"></div>
						<p class="text-white text-lg font-normal font-aktiv uppercase leading-loose tracking-[4px]">ON THE COURSE AND IN BUSINESS</p>
					</div>
					
					<!-- Main Heading -->
					<h1 class="text-white text-[160px] font-[600] font-gazzetta uppercase leading-[124px]">
						POWER,<br>
						PRECISION,<br>
						AND<br>
						PERFORMANCE
					</h1>
					
					<!-- Body Paragraph -->
					<p class="text-neutral-500 text-2xl font-medium font-aktiv leading-9">
						Driven by passion for golf and the thrill of creating meaningful business connections, <span class="text-[var(--primary-red)]">Ben Ricciardi</span> brings energy, influence, and results to every round and every deal.
					</p>
					
					<!-- CTA Button -->
					<a href="#" class="flex w-fit items-center bg-white text-black hover:bg-gray-100 transition-colors duration-200 rounded-full overflow-hidden px-8 py-4">
						<span class="text-black text-2xl font-semibold font-aktiv leading-loose mr-12">More about</span>
						<div class="bg-[var(--primary-red)] px-3 py-3 rounded-full flex items-center">
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
								<g clip-path="url(#clip0_1_553)">
									<path fill-rule="evenodd" clip-rule="evenodd" d="M14.2163 8.10001L8.0837 1.96651L9.3563 0.693909L17.6624 9.00001L9.3554 17.3061L8.0837 16.0335L14.2163 9.90001H1.0502V8.10001H14.2163Z" fill="white"/>
								</g>
								<defs>
									<clipPath id="clip0_1_553">
									<rect width="17.1" height="18" fill="white" transform="translate(0.619995)"/>
									</clipPath>
								</defs>
							</svg>
						</div>
					</a>
				</div>
				
				<!-- Right Column - Image -->
				<div class="relative">
					<div class="relative overflow-hidden border border-white/10 shadow-2xl" style="border-radius: 10px 10px 80px 10px;">
						<img 
							src={heroBannerImage.src} 
							alt="Ben Ricciardi putting on golf course" 
							class="w-full h-[600px] object-cover"
						/>
						
						<!-- Text Overlay Box -->
						<div class="absolute bottom-6 left-6">
							<div class="bg-white/80 backdrop-blur-sm rounded-xl rounded-bl-none p-4 pl-5 max-w-[320px]">
								<p class="text-black text-lg font-normal font-aktiv leading-relaxed italic">
									Nestled in a serene setting, our club boasts a meticulously designed course that challenges and inspires golfers of all abilities.
								</p>
							</div>
							<div class="bg-white/80 backdrop-blur-sm rounded-br-xl rounded-bl-xl p-4 pt-0 pl-5 pb-5 w-fit">
								<div class="w-8 h-8 bg-[var(--primary-red)] rounded-full flex items-center justify-center">
									<svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
									</svg>
								</div>
							</div>
						</div>
						
						<!-- Red Circle with Plus -->
						
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- About Section -->
	<section class="w-full py-20">
		<div class="w-full max-w-[1440px] mx-auto">
			<!-- Section Header -->
			<div class="flex justify-between items-center mb-16">
				<div class="text-white text-base font-medium font-aktiv uppercase leading-loose tracking-[4px]">01</div>
				<div class="text-white text-base font-medium font-aktiv uppercase leading-loose tracking-[4px]">ABOUT</div>
			</div>

			<!-- Main Content -->
			<div class="flex gap-30 items-stretch justify-between min-h-[400px]">
				<!-- Left Column - Image and Title -->
				<div class="w-full max-w-[300px] flex flex-col justify-between">
					<!-- Profile Image -->
					<div class="relative">
						<div class="relative overflow-hidden">
							<img 
								src={rectangleImage.src} 
								alt="Ben Ricciardi portrait" 
								class="w-[276px] h-[116px] object-cover rounded-[200px]"
							/>
						</div>
					</div>
					
					<!-- Title -->
					<h2 class="text-white text-9xl font-bold font-gazzetta uppercase leading-[93px]">
						WHO'S<br>
						BEN?
					</h2>
				</div>
				
				<!-- Right Column - Content -->
				<div class="w-full max-w-[840px]">
					<!-- Headline -->
					<h3 class="font-aktiv leading-[60px]">
						<span class="text-white text-5xl font-medium">Dynamic, ambitious, and unstoppable </span><span class="text-[#D63A2E] text-5xl font-bold">Ben</span><span class="text-white text-5xl font-medium"> is not just a golfer, but a </span><span class="text-white text-5xl font-medium italic">connector</span><span class="text-white text-5xl font-medium"> of people and </span><span class="text-white text-5xl font-medium italic">opportunities</span><span class="text-white text-5xl font-medium">. <br/></span>
					</h3>
					
					<!-- Body Paragraph -->
					<p class="text-white text-3xl font-light font-aktiv leading-10">
						With an impressive presence on and off the course, he combines his love for golf with his passion for building powerful business relationships. Every swing tells a story of discipline, focus, and determination — qualities that also define his professional life.
					</p>
				</div>
			</div>
		</div>
	</section>
	<section class="w-full py-20">
		<div class="w-full max-w-[1440px] mx-auto flex flex-row gap-12 justify-between">
			<div class="w-2/3 flex flex-col gap-15 items-end h-[400px]">
			    <div class="relative w-2/3 aspect-[1024/683] bg-cover bg-center bg-no-repeat rounded-[10px]" style={`background-image: url(${thumbImage.src})`}>
					<!-- PLAY BUTTON -->
					<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-14 h-14 bg-white/40 rounded-full border border-white">
						<svg class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
							<path d="M21.409 9.35294C21.8893 9.60835 22.291 9.98963 22.5712 10.4559C22.8514 10.9222 22.9994 11.456 22.9994 11.9999C22.9994 12.5439 22.8514 13.0777 22.5712 13.544C22.291 14.0102 21.8893 14.3915 21.409 14.6469L8.597 21.6139C6.534 22.7359 4 21.2759 4 18.9679V5.03294C4 2.72294 6.534 1.26394 8.597 2.38494L21.409 9.35294Z" fill="white"/>
						</svg>
					</div>
				</div>
				<div class="w-full h-full gap-8 flex flex-col">
					<h2 class="text-white text-5xl font-bold font-aktiv leading-10">Golf is more than a game</h2>
					<p class="text-neutral-500 text-2xl font-light font-aktiv leading-9">
						Beyond the course, our club offers a range of world-class 
						amenities, including a modern clubhouse, fine dining, professional 
						golf instruction, and a pro shop stocked with the latest gear.
					</p>
					<a href="#" class="flex flex-row gap-8 text-white text-xl font-medium font-aktiv leading-loose items-center">
						Ready to join us? Let’s talk
						<div class="bg-[#D63A2E] rounded-full p-1 w-8 h-8 flex items-center justify-center">
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
								<g clip-path="url(#clip0_7_849)">
									<path fill-rule="evenodd" clip-rule="evenodd" d="M14.0463 8.09995L7.91372 1.96645L9.18632 0.693848L17.4924 8.99995L9.18542 17.306L7.91372 16.0334L14.0463 9.89995H0.880219V8.09995H14.0463Z" fill="white"/>
								</g>
								<defs>
									<clipPath id="clip0_7_849">
									<rect width="17.1" height="18" fill="white" transform="translate(0.450012)"/>
									</clipPath>
								</defs>
							</svg>
						</div>
					</a>
				</div>
			</div>
			<div class="relative w-1/3 aspect-[436.67001/695] bg-cover bg-center bg-no-repeat rounded-[10px]" style={`background-image: url(${thumb2Image.src})`}>
				<!-- PLAY BUTTON -->
				<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-14 h-14 bg-white/40 rounded-full border border-white">
					<svg class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-6 h-6 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
						<path d="M21.409 9.35294C21.8893 9.60835 22.291 9.98963 22.5712 10.4559C22.8514 10.9222 22.9994 11.456 22.9994 11.9999C22.9994 12.5439 22.8514 13.0777 22.5712 13.544C22.291 14.0102 21.8893 14.3915 21.409 14.6469L8.597 21.6139C6.534 22.7359 4 21.2759 4 18.9679V5.03294C4 2.72294 6.534 1.26394 8.597 2.38494L21.409 9.35294Z" fill="white"/>
					</svg>
				</div>
			</div>
		</div>
	</section>

	<!-- HIGHLIGHTS SECTION -->
	<section class="w-full py-20 overflow-x-hidden">
		<div class="w-full max-w-[1440px] mx-auto">
			<!-- Section Header -->
			<div class="flex justify-between items-center mb-16">
				<div class="text-white text-base font-medium font-aktiv uppercase leading-loose tracking-[4px]">02</div>
				<div class="text-white text-base font-medium font-aktiv uppercase leading-loose tracking-[4px]">HIGHLIGHTS</div>
			</div>
			<div class="w-full text-center mb-0">
				<h2 class="text-white text-9xl font-bold font-gazzetta uppercase leading-[84px]">LATEST CONTENT</h2>
			</div>
			
			<!-- 3D Carousel Slider -->
			<div class="relative w-full h-[700px] flex items-center justify-center">
				<div class="carousel-container relative w-full h-full perspective-1000 flex items-center justify-center">
					<div class="carousel-track relative w-[339px] h-[568px] transform-style-preserve-3d transition-transform duration-700 ease-out flex items-center justify-center" id="carouselTrack">
						<!-- Slide 1 -->
						<div class="carousel-slide absolute w-[279px] h-[469px] transition-all duration-700 ease-out" data-index="0">
							<div class="relative w-full h-full rounded-2xl overflow-hidden shadow-2xl transform translate-z-0">
								<img 
									src="/assets/img/thumb-1.jpg" 
									alt="Golf course with mountain view" 
									class="w-full h-full object-cover"
								/>
								<div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
								<div class="absolute bottom-4 left-4 text-white">
									<!-- <h3 class="text-lg font-bold mb-1">ONE</h3> -->
								</div>
							</div>
						</div>
						
						<!-- Slide 2 -->
						<div class="carousel-slide absolute w-[339px] h-[568px] transition-all duration-700 ease-out" data-index="1">
							<div class="relative w-full h-full rounded-2xl overflow-hidden shadow-2xl transform translate-z-0">
								<img 
									src="/assets/img/thumb-2.jpg" 
									alt="Golfer in action" 
									class="w-full h-full object-cover"
								/>
								<div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
								<div class="absolute bottom-6 left-6 text-white">
									<!-- <h3 class="text-xl font-bold mb-2">TWO</h3> -->
								</div>
							</div>
						</div>
						
						<!-- Slide 3 -->
						<div class="carousel-slide absolute w-[279px] h-[469px] transition-all duration-700 ease-out" data-index="2">
							<div class="relative w-full h-full rounded-2xl overflow-hidden shadow-2xl transform translate-z-0">
								<img 
									src="/assets/img/portrait.png" 
									alt="Golf ball close-up" 
									class="w-full h-full object-cover"
								/>
								<div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
								<div class="absolute bottom-4 left-4 text-white">
									<!-- <h3 class="text-lg font-bold mb-1">THREE</h3> -->
								</div>
							</div>
						</div>
					</div>
					
					<!-- Navigation Arrows -->
					<button 
						id="prevBtn"
						class="carousel-nav carousel-prev absolute left-[446px] top-1/2 transform -translate-y-1/2 z-20 w-12 h-12 bg-[var(--primary-red)] rounded-full flex items-center justify-center hover:bg-red-600 transition-colors duration-200 shadow-lg cursor-pointer"
					>
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
							<g clip-path="url(#clip0_7_895)">
							<path fill-rule="evenodd" clip-rule="evenodd" d="M3.95371 9.90005L10.0863 16.0336L8.81371 17.3062L0.507612 9.00005L8.81461 0.693953L10.0863 1.96655L3.95371 8.10005L17.1198 8.10005L17.1198 9.90005L3.95371 9.90005Z" fill="white"/>
							</g>
							<defs>
							<clipPath id="clip0_7_895">
								<rect width="17.1" height="18" fill="white" transform="translate(17.55 18) rotate(180)"/>
							</clipPath>
							</defs>
						</svg>
					</button>
					
					<button 
						id="nextBtn"
						class="carousel-nav carousel-next absolute right-[446px] top-1/2 transform -translate-y-1/2 z-20 w-12 h-12 bg-[var(--primary-red)] rounded-full flex items-center justify-center hover:bg-red-600 transition-colors duration-200 shadow-lg cursor-pointer"
					>
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
							<g clip-path="url(#clip0_7_872)">
							<path fill-rule="evenodd" clip-rule="evenodd" d="M14.0463 8.09995L7.91369 1.96645L9.18629 0.693848L17.4924 8.99995L9.18539 17.306L7.91369 16.0334L14.0463 9.89995H0.880188V8.09995H14.0463Z" fill="white"/>
							</g>
							<defs>
							<clipPath id="clip0_7_872">
								<rect width="17.1" height="18" fill="white" transform="translate(0.450012)"/>
							</clipPath>
							</defs>
						</svg>
					</button>
				</div>
			</div>
		</div>
	</section>
	
	<!-- GOLF ACHIEVEMENTS SECTION -->
	<section class="w-full py-20 overflow-x-hidden">
		<div class="w-full max-w-[1440px] mx-auto flex flex-row gap-0 justify-between">
			<div class="w-1/2  bg-[#D63A2E]"></div>
			<div class="w-1/2 pl-24 flex flex-col gap-20">
				<div class="text-white text-base font-medium font-aktiv uppercase leading-loose tracking-[4px]">GOLF ACHIEVEMENTS</div>
				<div class="flex flex-col gap-20">
					<h2 class="text-white text-9xl font-bold font-gazzetta uppercase leading-[105px]">
						Mentality that conquered<br/>
						business
					</h2>
					<div class="flex flex-col gap-10"> 
						<div class="uppercase text-white uppercase text-3xl font-medium font-aktiv leading-10 tracking-[3px]">
							EXPERT LINE
						</div>
						<p class="text-[#BFBFBF] text-3xl font-normal font-aktiv leading-10">
							Beyond the course, our club offers a range of world-class  amenities, including a modern clubhouse, fine dining, professional  golf instruction, and a pro shop stocked with the latest gear.
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>


	<style>
		.perspective-1000 {
			perspective: 1000px;
		}
		
		.transform-style-preserve-3d {
			transform-style: preserve-3d;
		}
		
		.carousel-slide {
			backface-visibility: hidden;
		}
		
		.carousel-slide[data-index="0"] {
			transform: translateX(-380px) rotateY(-5deg) translateZ(-100px);
			opacity: 0.6;
		}
		
		.carousel-slide[data-index="1"] {
			transform: translateX(0) rotateY(0deg) translateZ(0px);
			opacity: 1;
			z-index: 10;
		}
		
		.carousel-slide[data-index="2"] {
			transform: translateX(365px) rotateY(5deg) translateZ(-100px);
			opacity: 0.6;
		}
		
		.carousel-slide.active {
			transform: translateX(0) rotateY(0deg) translateZ(0px) !important;
			opacity: 1 !important;
			z-index: 10 !important;
			width: 339px !important;
			height: 568px !important;
		}
		
		.carousel-slide.prev {
			transform: translateX(-365px) rotateY(-5deg) translateZ(-100px) !important;
			opacity: 0.6 !important;
			width: 279px !important;
			height: 469px !important;
		}
		
		.carousel-slide.next {
			transform: translateX(365px) rotateY(5deg) translateZ(-100px) !important;
			opacity: 0.6 !important;
			width: 279px !important;
			height: 469px !important;
		}
		
		@media (max-width: 768px) {
			.carousel-slide[data-index="0"],
			.carousel-slide[data-index="2"] {
				display: none;
			}
			
			.carousel-slide[data-index="1"] {
				transform: translateX(0) rotateY(0deg) translateZ(0px);
				opacity: 1;
			}
		}
	</style>

	<script>
		let currentSlide = 1;
		const totalSlides = 3;
		
		function updateCarousel() {
			const slides = document.querySelectorAll('.carousel-slide');
			const track = document.getElementById('carouselTrack');
			
			slides.forEach((slide, index) => {
				slide.classList.remove('active', 'prev', 'next');
				
				// Reset text sizing
				const title = slide.querySelector('h3');
				const description = slide.querySelector('p');
				const textContainer = slide.querySelector('.absolute.bottom-4, .absolute.bottom-6');
				
				if (index === currentSlide) {
					slide.classList.add('active');
					// Active slide - full size text
					if (title) {
						title.className = 'text-xl font-bold mb-2';
					}
					if (description) {
						description.className = 'text-sm opacity-90';
					}
					if (textContainer) {
						textContainer.className = 'absolute bottom-6 left-6 text-white';
					}
				} else if (index === (currentSlide - 1 + totalSlides) % totalSlides) {
					slide.classList.add('prev');
					// Side slide - smaller text
					if (title) {
						title.className = 'text-lg font-bold mb-1';
					}
					if (description) {
						description.className = 'text-xs opacity-90';
					}
					if (textContainer) {
						textContainer.className = 'absolute bottom-4 left-4 text-white';
					}
				} else if (index === (currentSlide + 1) % totalSlides) {
					slide.classList.add('next');
					// Side slide - smaller text
					if (title) {
						title.className = 'text-lg font-bold mb-1';
					}
					if (description) {
						description.className = 'text-xs opacity-90';
					}
					if (textContainer) {
						textContainer.className = 'absolute bottom-4 left-4 text-white';
					}
				}
			});
		}
		
		function nextSlide() {
			currentSlide = (currentSlide + 1) % totalSlides;
			updateCarousel();
		}
		
		function previousSlide() {
			currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
			updateCarousel();
		}
		
		// Initialize carousel
		document.addEventListener('DOMContentLoaded', function() {
			updateCarousel();
			
			// Add event listeners to buttons
			const prevBtn = document.getElementById('prevBtn');
			const nextBtn = document.getElementById('nextBtn');
			
			if (prevBtn) {
				prevBtn.addEventListener('click', function(e) {
					e.preventDefault();
					previousSlide();
				});
			}
			
			if (nextBtn) {
				nextBtn.addEventListener('click', function(e) {
					e.preventDefault();
					nextSlide();
				});
			}
			
			// Auto-play functionality (optional)
			setInterval(nextSlide, 5000);
		});
		
		// Touch/swipe support for mobile
		let startX = 0;
		let endX = 0;
		
		document.addEventListener('touchstart', function(e) {
			startX = e.touches[0].clientX;
		});
		
		document.addEventListener('touchend', function(e) {
			endX = e.changedTouches[0].clientX;
			handleSwipe();
		});
		
		function handleSwipe() {
			const threshold = 50;
			const diff = startX - endX;
			
			if (Math.abs(diff) > threshold) {
				if (diff > 0) {
					nextSlide();
				} else {
					previousSlide();
				}
			}
		}
	</script>

</Layout>