---
// Header component with navigation
export interface Props {
  currentPage?: string;
}

const { currentPage = 'home' } = Astro.props;
---

<header class="w-full bg-black pt-12">
  <nav class="w-full px-20 flex items-center min-h-20 relative">
    <div class="flex items-center gap-11 absolute left-1/2 transform -translate-x-1/2">
      <a href="/" class={`font-aktiv text-xl font-medium leading-7 tracking-[-0.4px] no-underline transition-all duration-200 flex px-3 py-3 justify-center items-center gap-2.5 rounded-lg ${
        currentPage === 'home' 
          ? 'bg-[var(--primary-red)] text-white' 
          : 'text-white hover:bg-[var(--primary-red)] hover:opacity-90'
      }`}>Home</a>
      <a href="/about" class={`font-aktiv text-xl font-medium leading-7 tracking-[-0.4px] no-underline transition-all duration-200 flex px-3 py-3 justify-center items-center gap-2.5 rounded-lg ${
        currentPage === 'about' 
          ? 'bg-[var(--primary-red)] text-white' 
          : 'text-white hover:bg-[var(--primary-red)] hover:opacity-90'
      }`}>About</a>
      <a href="/golf" class={`font-aktiv text-xl font-medium leading-7 tracking-[-0.4px] no-underline transition-all duration-200 flex px-3 py-3 justify-center items-center gap-2.5 rounded-lg ${
        currentPage === 'golf' 
          ? 'bg-[var(--primary-red)] text-white' 
          : 'text-white hover:bg-[var(--primary-red)] hover:opacity-90'
      }`}>Golf</a>
      <a href="/business" class={`font-aktiv text-xl font-medium leading-7 tracking-[-0.4px] no-underline transition-all duration-200 flex px-3 py-3 justify-center items-center gap-2.5 rounded-lg ${
        currentPage === 'business' 
          ? 'bg-[var(--primary-red)] text-white' 
          : 'text-white hover:bg-[var(--primary-red)] hover:opacity-90'
      }`}>Business</a>
      <a href="/media" class={`font-aktiv text-xl font-medium leading-7 tracking-[-0.4px] no-underline transition-all duration-200 flex px-3 py-3 justify-center items-center gap-2.5 rounded-lg ${
        currentPage === 'media' 
          ? 'bg-[var(--primary-red)] text-white' 
          : 'text-white hover:bg-[var(--primary-red)] hover:opacity-90'
      }`}>Media</a>
      <a href="/contact" class={`font-aktiv text-xl font-medium leading-7 tracking-[-0.4px] no-underline transition-all duration-200 flex px-3 py-3 justify-center items-center gap-2.5 rounded-lg ${
        currentPage === 'contact' 
          ? 'bg-[var(--primary-red)] text-white' 
          : 'text-white hover:bg-[var(--primary-red)] hover:opacity-90'
      }`}>Contact</a>
    </div>
    <button class="flex px-6 py-5 justify-center items-center gap-2.5 bg-[var(--primary-red)] text-white font-aktiv text-xl font-medium leading-7 tracking-[-0.4px] border-none rounded-lg cursor-pointer transition-all duration-200 hover:opacity-90 hover:-translate-y-0.5 ml-auto">Contact Now</button>
  </nav>
</header>
